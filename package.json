{
  "name": "watchreload-server",
  "version": "0.3.0",
  "description": "Yet Another Live reload server",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run unit",
    "lint": "fecs check",
    "unit": "mocha test/tasks/*.spec.js",
    "cover": "npm run cover-local && npm run coveralls",
    "cover-local": "istanbul cover _mocha test/tasks/*.spec.js",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "release": "sh build/release.sh",
    "prepublish": "npm test",
    "postinstall": "uglifyjs ./node_modules/socket.io/node_modules/socket.io-client/socket.io.js -o ./node_modules/socket.io/node_modules/socket.io-client/socket.io.min.js"
  },
  "engines": {
    "node": ">=0.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wuhy/watchreload-server.git"
  },
  "bugs": {
    "url": "https://github.com/wuhy/watchreload-server/issues"
  },
  "keywords": [
    "websocket",
    "livereload",
    "watchreload",
    "watch"
  ],
  "author": "sparklewhy@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "coveralls": "^2.11.6",
    "expect.js": "^0.3.1",
    "fecs": "^0.4.19",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "uglify-js": "^2.6.1"
  },
  "dependencies": {
    "chalk": "^1.1.1",
    "chokidar": "^1.4.2",
    "connect": "^3.4.0",
    "http-proxy": "^1.12.0",
    "lodash": "^3.10.1",
    "opn": "^3.0.3",
    "serve-static": "^1.10.0",
    "socket.io": "^1.3.7"
  },
  "readmeFilename": "README.md"
}
